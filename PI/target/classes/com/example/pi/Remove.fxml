<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pi.RemoveController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Eliminar equipos" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="20.0" />
        </font></Label>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="Nombre:" />
            <TextField fx:id="txfBorrar" GridPane.columnIndex="1" />
          <Button mnemonicParsing="false" onAction="#borrarTodo" text="Eliminar todos" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" text="Eliminar" onAction="#borrar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </children>
    </GridPane>
</VBox>
